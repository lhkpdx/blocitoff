<h2>Profile page for <%= @user.username %></h2>
<div class="container"
  <div class="row">
    <ul>
      <li>You've been a member since <%= time_ago_in_words(@user.created_at) %> ago.</li>
      <li>Your current email address:  <%= @user.email %></li>
    </ul>
  </div>
</div>

<div class="container"
  <div class="row">
    <%= link_to "Create item", new_user_item_path(@user, @item) %>
  </div>
</div>
<br>
<div class="container"
  <div class="row">
    <% @items.each do |item| %>
    <%= item.name %><br>
    <% end %>
  </div>
</div>
